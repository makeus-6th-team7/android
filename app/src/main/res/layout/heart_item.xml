<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="24dp">

    <TextView
        android:id="@+id/tv_heart_group"
        style="@style/FontSubHead2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="친구들이랑 호캉스"
        android:textColor="@color/bw_b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_heart_item1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_heart_group"
        app:riv_corner_radius_top_left="4dp"
        app:riv_oval="false"
        tools:src="@tools:sample/avatars" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_heart_item2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/iv_heart_item1"
        app:layout_constraintTop_toTopOf="@+id/iv_heart_item1"
        app:riv_corner_radius_top_right="4dp"
        app:riv_oval="false"
        tools:src="@tools:sample/avatars" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_heart_item3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_heart_item1"
        app:riv_corner_radius_bottom_left="4dp"
        app:riv_oval="false"
        tools:src="@tools:sample/avatars" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_heart_item4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/iv_heart_item2"
        app:layout_constraintStart_toEndOf="@+id/iv_heart_item3"
        app:layout_constraintTop_toBottomOf="@+id/iv_heart_item2"
        app:riv_corner_radius_bottom_right="4dp"
        app:riv_oval="false"
        tools:src="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>